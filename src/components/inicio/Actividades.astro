---
const eventos = [
  {
    titulo: "Servicio Dominical",
    fecha: "2025-06-01",
    descripcion: "Encuentro y adoración cada domingo a las 10:00 AM.",
    lugar: "Iglesia Principal",
  },
  {
    titulo: "Escuela Bíblica para Jóvenes",
    fecha: "2025-06-05",
    descripcion: "Clases interactivas para jóvenes de 15 a 25 años.",
    lugar: "Salón 3",
  },
  {
    titulo: "Concierto de Alabanza",
    fecha: "2025-06-10",
    descripcion: "Noche especial con música en vivo y testimonios.",
    lugar: "Auditorio Central",
  },
];
---

<section class="py-16 bg-white">
  <div class="container mx-auto max-w-5xl px-6">
    <h2 class="text-4xl font-bold mb-12 text-center text-gray-900">Próximas Actividades</h2>

    <ul class="space-y-8">
      {eventos.map(({ titulo, fecha, descripcion, lugar }) => (
        <li class="border-l-4 border-indigo-600 pl-6 relative">
          <time class="text-indigo-600 font-semibold text-sm absolute -left-32 top-0">{new Date(fecha).toLocaleDateString('es-ES', { day:'numeric', month:'short', year:'numeric' })}</time>
          <h3 class="text-xl font-semibold text-gray-900 mb-1">{titulo}</h3>
          <p class="text-gray-700 mb-1">{descripcion}</p>
          <p class="text-sm text-gray-500 italic">{lugar}</p>
        </li>
      ))}
    </ul>
  </div>
</section>
