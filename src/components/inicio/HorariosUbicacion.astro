---
const horarios = [
  {
    titulo: "Servicio Dominical",
    hora: "Domingo 10:00 AM",
    tipo: "Principal",
    color: "bg-blue-100 text-blue-800",
    icono: "event"
  },
  {
    titulo: "Estudio Bíblico",
    hora: "Miércoles 7:00 PM",
    tipo: "Grupos",
    color: "bg-green-100 text-green-800",
    icono: "menu_book"
  },
  {
    titulo: "Oración",
    hora: "Sábado 6:00 PM",
    tipo: "Comunión",
    color: "bg-purple-100 text-purple-800",
    icono: "volunteer_activism"
  }
];
---

<section class="py-20 bg-gradient-to-br from-slate-50 to-blue-50 relative">
  <!-- Patrón decorativo -->
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl font-bold text-center mb-12 text-gray-800">
        Horarios y Ubicación
      </h2>
      <div class="grid md:grid-cols-2 gap-10">
        <!-- Horarios -->
        <div class="backdrop-blur-xl bg-white/70 rounded-3xl shadow-2xl p-10 flex flex-col justify-between animate-fadeInUp">
          <h3 class="text-2xl font-semibold mb-8 text-gray-800 flex items-center gap-3">
            <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-blue-100">
              <span class="material-icons text-blue-600 text-3xl">schedule</span>
            </span>
            Horarios de Servicios
          </h3>
          <div class="space-y-6">
            {horarios.map(h => (
              <div class="flex items-center p-4 rounded-xl bg-gradient-to-r from-white to-blue-50 shadow group hover:scale-105 transition-transform duration-300">
                <div class="flex items-center justify-center w-14 h-14 rounded-2xl bg-blue-100 mr-4">
                  <span class="material-icons text-blue-600 text-2xl">{h.icono}</span>
                </div>
                <div class="flex-1">
                  <h4 class="font-semibold text-gray-800">{h.titulo}</h4>
                  <p class="text-gray-600">{h.hora}</p>
                </div>
                <span class={`px-3 py-1 rounded-full text-sm font-medium ${h.color} shadow`}>{h.tipo}</span>
              </div>
            ))}
          </div>
        </div>
        <!-- Ubicación -->
        <div class="backdrop-blur-xl bg-white/70 rounded-3xl shadow-2xl p-10 animate-fadeInUp delay-100">
          <h3 class="text-2xl font-semibold mb-8 text-gray-800 flex items-center gap-3">
            <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-blue-100">
              <span class="material-icons text-blue-600 text-3xl">location_on</span>
            </span>
            Nuestra Ubicación
          </h3>
          <div class="p-4 bg-blue-50 rounded-xl mb-6">
            <p class="text-gray-800 font-medium mb-2">Dirección:</p>
            <p class="text-gray-600">Calle Principal #123</p>
            <p class="text-gray-600">Ciudad, Estado CP</p>
          </div>
          <div class="h-64 rounded-2xl overflow-hidden mb-6 shadow">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387193.30591910525!2d-74.25986432970718!3d40.697149422113014!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNueva%20York%2C%20EE.%20UU.!5e0!3m2!1ses!2smx!4v1645564750986!5m2!1ses!2smx"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              class="rounded-2xl"></iframe>
          </div>
          <div class="flex space-x-4 mt-4">
            <a
              href="https://maps.google.com"
              target="_blank"
              class="flex-1 flex items-center justify-center gap-2 bg-blue-600 text-white py-3 px-4 rounded-xl hover:bg-blue-700 transition-colors duration-300 shadow-lg text-lg font-medium"
            >
              <span class="material-icons">map</span>
              Google Maps
            </a>
            <a
              href="https://waze.com"
              target="_blank"
              class="flex-1 flex items-center justify-center gap-2 bg-green-600 text-white py-3 px-4 rounded-xl hover:bg-green-700 transition-colors duration-300 shadow-lg text-lg font-medium"
            >
              <span class="material-icons">navigation</span>
              Waze
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-fadeInUp { animation: fadeInUp 0.7s cubic-bezier(.4,0,.2,1) both; }
.delay-100 { animation-delay: .15s; }
</style>

