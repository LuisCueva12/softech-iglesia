---
// Aquí posteriormente se agregará la lógica para obtener los posts
const posts = [
	{
		title: "El Poder de la Oración en Tiempos Difíciles",
		excerpt: "Descubre cómo la oración puede transformar tu vida y darte fortaleza en momentos de adversidad...",
		category: "Reflexiones",
		date: "15 de Marzo, 2024",
		author: "Pastor Juan Pérez",
		type: "blog",
		color: "from-blue-500 to-blue-600"
	},
	{
		title: "Construyendo una Comunidad de Fe",
		excerpt: "La importancia de mantener una comunidad unida y cómo esto fortalece nuestra fe...",
		category: "Comunidad",
		date: "10 de Marzo, 2024",
		author: "María González",
		type: "blog",
		color: "from-purple-500 to-purple-600"
	},
	{
		title: "Jóvenes y Fe: Encontrando tu Camino",
		excerpt: "Una guía para jóvenes que buscan fortalecer su relación con Dios en el mundo moderno...",
		category: "Jóvenes",
		date: "5 de Marzo, 2024",
		author: "David Rodríguez",
		type: "blog",
		color: "from-green-500 to-green-600"
	}
];

const noticias = [
	{
		title: "Gran Celebración de Pascua en Nuestra Iglesia",
		excerpt: "Más de 500 personas se reunieron para celebrar la resurrección de Cristo en un servicio especial...",
		category: "Eventos",
		date: "20 de Marzo, 2024",
		author: "Comité de Eventos",
		type: "noticia",
		color: "from-red-500 to-red-600"
	},
	{
		title: "Nuevo Programa de Ayuda Comunitaria",
		excerpt: "Lanzamos un nuevo programa para apoyar a las familias necesitadas de nuestra comunidad...",
		category: "Comunidad",
		date: "18 de Marzo, 2024",
		author: "Ministerio Social",
		type: "noticia",
		color: "from-yellow-500 to-yellow-600"
	}
];
---

<div class="space-y-12">
	<!-- Sección de Noticias -->
	<section>
		<div class="flex items-center justify-between mb-8">
			<h2 class="text-3xl font-bold text-gray-900">Últimas Noticias</h2>
			<a href="#" class="text-blue-600 hover:text-blue-800 font-medium flex items-center gap-2 group">
				Ver todas las noticias
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
					<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
				</svg>
			</a>
		</div>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			{noticias.map((noticia) => (
				<article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
					<div class="relative h-48 bg-gradient-to-r {noticia.color}">
						<div class="absolute inset-0 bg-black/20"></div>
						<div class="absolute inset-0 flex items-center justify-center">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-white/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
							</svg>
						</div>
						<div class="absolute top-4 left-4">
							<span class="bg-white/20 backdrop-blur-sm text-white px-3 py-1 rounded-full text-sm font-medium">
								{noticia.category}
							</span>
						</div>
					</div>
					<div class="p-6">
						<div class="flex items-center text-sm text-gray-500 mb-2">
							<span>{noticia.date}</span>
							<span class="mx-2">•</span>
							<span class="text-blue-600">{noticia.type}</span>
						</div>
						<h3 class="text-xl font-bold text-gray-900 mb-2">
							<a href="#" class="hover:text-blue-600 transition-colors">
								{noticia.title}
							</a>
						</h3>
						<p class="text-gray-600 mb-4">{noticia.excerpt}</p>
						<div class="flex items-center justify-between">
							<div class="text-sm">
								<p class="text-gray-900 font-medium">{noticia.author}</p>
							</div>
							<a href="#" class="text-blue-600 hover:text-blue-800 font-medium group">
								Leer más
								<span class="inline-block transform group-hover:translate-x-1 transition-transform">→</span>
							</a>
						</div>
					</div>
				</article>
			))}
		</div>
	</section>

	<!-- Sección de Blog -->
	<section>
		<div class="flex items-center justify-between mb-8">
			<h2 class="text-3xl font-bold text-gray-900">Artículos del Blog</h2>
			<a href="#" class="text-blue-600 hover:text-blue-800 font-medium flex items-center gap-2 group">
				Ver todos los artículos
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
					<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
				</svg>
			</a>
		</div>
		<div class="space-y-8">
			{posts.map((post) => (
				<article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
					<div class="md:flex">
						<div class="md:w-48 md:flex-shrink-0 bg-gradient-to-br {post.color} relative">
							<div class="absolute inset-0 bg-black/20"></div>
							<div class="absolute inset-0 flex items-center justify-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
								</svg>
							</div>
						</div>
						<div class="p-6">
							<div class="flex items-center text-sm text-gray-500 mb-2">
								<span>{post.date}</span>
								<span class="mx-2">•</span>
								<span class="text-blue-600">{post.category}</span>
							</div>
							<h3 class="text-2xl font-bold text-gray-900 mb-2">
								<a href="#" class="hover:text-blue-600 transition-colors">
									{post.title}
								</a>
							</h3>
							<p class="text-gray-600 mb-4">{post.excerpt}</p>
							<div class="flex items-center justify-between">
								<div class="text-sm">
									<p class="text-gray-900 font-medium">{post.author}</p>
								</div>
								<a href="#" class="text-blue-600 hover:text-blue-800 font-medium group">
									Leer más
									<span class="inline-block transform group-hover:translate-x-1 transition-transform">→</span>
								</a>
							</div>
						</div>
					</div>
				</article>
			))}
		</div>
	</section>
</div>

<div class="mt-12 flex justify-center">
	<nav class="flex items-center space-x-2">
		<a href="#" class="px-4 py-2 border rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors">
			Anterior
		</a>
		<a href="#" class="px-4 py-2 border rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors">
			1
		</a>
		<a href="#" class="px-4 py-2 border rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors">
			2
		</a>
		<a href="#" class="px-4 py-2 border rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors">
			3
		</a>
		<a href="#" class="px-4 py-2 border rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors">
			Siguiente
		</a>
	</nav>
</div>