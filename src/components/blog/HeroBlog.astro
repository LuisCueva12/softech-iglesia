---
const { title = "Blog y Noticias", subtitle = "Compartiendo la Palabra de Dios", description = "Descubre artículos inspiradores, noticias de nuestra comunidad y reflexiones que fortalecerán tu fe." } = Astro.props;
---

<section class="relative min-h-[70vh] bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 text-white overflow-hidden">
  <!-- Efectos de fondo modernos -->
  <div class="absolute inset-0">
    <!-- Gradiente radial principal -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-blue-500/20 via-transparent to-transparent"></div>
    
    <!-- Patrón de puntos -->
    <div class="absolute inset-0 bg-[linear-gradient(45deg,_transparent_25%,_rgba(255,255,255,0.03)_25%,_rgba(255,255,255,0.03)_50%,_transparent_50%,_transparent_75%,_rgba(255,255,255,0.03)_75%)] bg-[length:30px_30px]"></div>
    
    <!-- Círculos decorativos con blur -->
    <div class="absolute top-1/4 -left-32 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 -right-32 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl animate-pulse"></div>
    
    <!-- Líneas decorativas -->
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-blue-500/50 to-transparent"></div>
    <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-indigo-500/50 to-transparent"></div>
  </div>
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-6xl mx-auto py-24 md:py-32">
      <!-- Título principal con efecto de brillo -->
      <div class="text-center mb-16">
        <div class="inline-block mb-4 px-4 py-2 bg-blue-500/10 rounded-full backdrop-blur-sm border border-blue-500/20">
          <span class="text-blue-300 text-sm font-medium tracking-wider uppercase">Bienvenido a nuestro</span>
        </div>
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-bold mb-8 leading-tight animate-fade-in">
          <span class="block bg-clip-text text-transparent bg-gradient-to-r from-white via-blue-100 to-blue-200">
            {title}
          </span>
        </h1>
        <div class="flex items-center justify-center gap-4 mb-8">
          <div class="h-1 w-16 bg-gradient-to-r from-blue-400 to-blue-600"></div>
          <p class="text-2xl md:text-3xl text-blue-100 font-light">
            {subtitle}
          </p>
          <div class="h-1 w-16 bg-gradient-to-r from-blue-400 to-blue-600"></div>
        </div>
      </div>

      <!-- Barra de búsqueda y botones en un contenedor con efecto de cristal -->
      <div class="max-w-4xl mx-auto backdrop-blur-md bg-white/5 rounded-3xl p-8 shadow-2xl border border-white/10">
        <div class="flex flex-col md:flex-row gap-6 items-center">
          <!-- Barra de búsqueda -->
          <div class="relative flex-1 w-full group">
            <div class="absolute inset-y-0 left-0 pl-5 flex items-center pointer-events-none">
              <svg class="h-6 w-6 text-blue-300 group-hover:text-blue-200 transition-colors duration-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
              </svg>
            </div>
            <input
              type="search"
              placeholder="Buscar artículos o noticias..."
              class="w-full pl-14 pr-6 py-5 rounded-2xl text-gray-900 focus:outline-none focus:ring-4 focus:ring-blue-300/50 bg-white/95 shadow-lg transition-all duration-300 text-lg"
              aria-label="Buscar artículos o noticias"
            />
          </div>
          
          <!-- Botones -->
          <div class="flex gap-4">
            <button class="group px-8 py-5 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-2xl hover:from-blue-500 hover:to-blue-600 hover:scale-105 transition-all duration-300 shadow-lg flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 group-hover:rotate-12 transition-transform duration-300" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
              </svg>
              <span class="text-lg font-medium">Noticias</span>
            </button>
            <button class="group px-8 py-5 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white rounded-2xl hover:from-indigo-500 hover:to-indigo-600 hover:scale-105 transition-all duration-300 shadow-lg flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 group-hover:rotate-12 transition-transform duration-300" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
              </svg>
              <span class="text-lg font-medium">Blog</span>
            </button>
          </div>
        </div>
      </div>

      <!-- Descripción con estilo moderno -->
      <div class="mt-12 text-center">
        <p class="text-xl text-blue-100/90 max-w-2xl mx-auto leading-relaxed">
          {description}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animación suave para el título */
  .animate-fade-in {
    animation: fadeIn 1.2s ease-out;
  }

  @keyframes fadeIn {
    0% { 
      opacity: 0; 
      transform: translateY(30px); 
    }
    100% { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  /* Efecto de brillo en hover para los botones */
  .group:hover {
    box-shadow: 0 0 30px rgba(59, 130, 246, 0.3);
  }
</style>