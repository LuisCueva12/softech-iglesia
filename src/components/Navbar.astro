<script>
    // Script para el menú móvil
    const button = document.querySelector('[data-collapse-toggle="mega-menu-full-image"]');
    const menu = document.getElementById('mega-menu-full-image');
    
    button?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
    });

    // Script para el menú desplegable con imagen
    const dropdownButton = document.getElementById('mega-menu-full-cta-image-button');
    const dropdown = document.getElementById('mega-menu-full-image-dropdown');
    
    dropdownButton?.addEventListener('click', (event) => {
        event.stopPropagation();
        dropdown?.classList.toggle('hidden');
    });

    // Cerrar el menú desplegable al hacer clic fuera
    document.addEventListener('click', (event) => {
        if (dropdown && !dropdownButton?.contains(event.target as Node) && !dropdown.contains(event.target as Node)) {
            dropdown.classList.add('hidden');
        }
    });

    // Prevenir que el clic en el menú desplegable lo cierre
    dropdown?.addEventListener('click', (event) => {
        event.stopPropagation();
    });
</script>
