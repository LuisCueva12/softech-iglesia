---
// MainLayout.astro
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Iglesia" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="Iglesia - Comunidad de fe y esperanza" />
  </head>
  <body class="font-sans text-gray-800 bg-white">
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
