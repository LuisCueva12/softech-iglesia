---
import MainLayout from '../layouts/MainLayout.astro';
import RadioVivoSection from '../components/radio/RadioVivoSection.astro';
import GrabacionesRecientesSection from '../components/radio/GrabacionesRecientesSection.astro';
import ProgramasRadioSection from '../components/radio/ProgramasRadioSection.astro';

const grabacionesRecientes = [
  {
    id: 1,
    titulo: "Mensaje Dominical: Esperanza en Tiempos Inciertos",
    predicador: "Pastor Juan Pérez",
    fecha: "2024-05-19",
    audioUrl: "#placeholder-audio-1" // Replace with actual audio URL
  },
  {
    id: 2,
    titulo: "Estudio Bíblico: Romanos 8",
    predicador: "Hermana María Rodríguez",
    fecha: "2024-05-15",
    audioUrl: "#placeholder-audio-2" // Replace with actual audio URL
  },
   {
    id: 3,
    titulo: "Oración de Martes: Fortaleza en la Fe",
    predicador: "Equipo de Oración",
    fecha: "2024-05-14",
    audioUrl: "#placeholder-audio-3" // Replace with actual audio URL
  }
];

interface Grabacion {
    id: number;
    titulo: string;
    predicador: string;
    fecha: string;
    audioUrl: string;
}

---

<MainLayout title="Radio en Vivo">
  <section class="py-20 bg-gradient-to-br from-slate-50 to-blue-50 relative min-h-screen">
    <!-- Patrón decorativo -->
    <div class="absolute inset-0 bg-[linear-gradient(45deg,_transparent_25%,_rgba(59,130,246,0.03)_25%,_rgba(59,130,246,0.03)_50%,_transparent_50%,_transparent_75%,_rgba(59,130,246,0.03)_75%)] bg-[length:20px_20px] pointer-events-none"></div>

    <div class="container mx-auto px-6 relative z-10 flex flex-col items-center">
      <!-- Encabezado -->
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Radio en Vivo y Contenido Grabado</h1>
        <p class="text-xl text-gray-600">Sintoniza nuestra transmisión o explora mensajes y programas pasados.</p>
      </div>

      <!-- Contenido Principal: Live y Grabaciones -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 w-full max-w-7xl mb-16">

        <RadioVivoSection />

        {/* Passing dummy data to GrabacionesRecientesSection */}
        <GrabacionesRecientesSection grabaciones={grabacionesRecientes} />

      </div>

      {/* Programas Radiales Section */}
      <ProgramasRadioSection />

       <!-- Información Adicional (Opcional) -->
      <div class="mt-16 max-w-2xl text-center text-gray-700">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Programación Destacada</h3>
          <p>Lunes a Viernes: 7:00 AM - Devocional Matutino</p>
          <p>Domingos: 10:00 AM - Servicio Principal</p>
          <p class="mt-4 text-sm">Consulta el horario completo en nuestra sección de actividades.</p>
      </div>

    </div>
  </div>
</section>

<style>
