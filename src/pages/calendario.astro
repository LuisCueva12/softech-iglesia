---
import MainLayout from '../layouts/MainLayout.astro';
import { Icon } from 'astro-icon/components';
---

<MainLayout title="Calendario de Eventos">
  <main class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Calendario de Eventos</h1>
        <p class="text-xl text-gray-600">Mantente al día con nuestras actividades y eventos especiales</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Calendar Widget -->
        <div class="lg:col-span-2 bg-white rounded-2xl shadow-xl p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-semibold text-gray-900">Calendario Mensual</h2>
            <div class="flex space-x-2">
              <button class="p-2 hover:bg-gray-100 rounded-lg">
                <Icon name="mdi:chevron-left" class="w-6 h-6 text-gray-600" />
              </button>
              <button class="p-2 hover:bg-gray-100 rounded-lg">
                <Icon name="mdi:chevron-right" class="w-6 h-6 text-gray-600" />
              </button>
            </div>
          </div>
          <div class="grid grid-cols-7 gap-2 text-center">
            <div class="text-sm font-medium text-gray-500">Dom</div>
            <div class="text-sm font-medium text-gray-500">Lun</div>
            <div class="text-sm font-medium text-gray-500">Mar</div>
            <div class="text-sm font-medium text-gray-500">Mié</div>
            <div class="text-sm font-medium text-gray-500">Jue</div>
            <div class="text-sm font-medium text-gray-500">Vie</div>
            <div class="text-sm font-medium text-gray-500">Sáb</div>
            <!-- Calendar days will be dynamically populated -->
          </div>
        </div>

        <!-- Upcoming Events -->
        <div class="bg-white rounded-2xl shadow-xl p-6">
          <h2 class="text-2xl font-semibold text-gray-900 mb-6">Próximos Eventos</h2>
          <div class="space-y-4">
            <div class="border-l-4 border-blue-500 pl-4">
              <h3 class="font-medium text-gray-900">Culto de Adoración</h3>
              <p class="text-sm text-gray-600">Domingo, 10:00 AM</p>
            </div>
            <div class="border-l-4 border-green-500 pl-4">
              <h3 class="font-medium text-gray-900">Estudio Bíblico</h3>
              <p class="text-sm text-gray-600">Miércoles, 7:00 PM</p>
            </div>
            <div class="border-l-4 border-purple-500 pl-4">
              <h3 class="font-medium text-gray-900">Jóvenes</h3>
              <p class="text-sm text-gray-600">Viernes, 8:00 PM</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Event Categories -->
      <div class="mt-16">
        <h2 class="text-2xl font-semibold text-gray-900 mb-8">Categorías de Eventos</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-blue-50 rounded-xl p-6">
            <Icon name="mdi:church" class="w-12 h-12 text-blue-500 mb-4" />
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Cultos</h3>
            <p class="text-gray-600">Servicios regulares y especiales</p>
          </div>
          <div class="bg-green-50 rounded-xl p-6">
            <Icon name="mdi:book-open-variant" class="w-12 h-12 text-green-500 mb-4" />
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Estudios</h3>
            <p class="text-gray-600">Clases y estudios bíblicos</p>
          </div>
          <div class="bg-purple-50 rounded-xl p-6">
            <Icon name="mdi:account-group" class="w-12 h-12 text-purple-500 mb-4" />
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Grupos</h3>
            <p class="text-gray-600">Reuniones de grupos y ministerios</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</MainLayout> 